<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".genQr">

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/qrc"
                android:layout_width="332dp"
                android:layout_height="240dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginStart="31dp"
                android:layout_marginLeft="31dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/qrcode" />

            <TextView
                android:id="@+id/saveQR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qrc"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="205dp"
                android:layout_marginLeft="205dp"
                android:layout_marginTop="-3dp"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="324dp"
                android:gravity="center"
                android:text="Save QR Code"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/namesub"
                android:layout_width="332dp"
                android:layout_height="35dp"
                android:layout_below="@+id/qrc"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="29dp"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:gravity="center"
                android:text="วิชา คณิตศาสตร์" />

            <TextView
                android:id="@+id/showkey"
                android:layout_width="332dp"
                android:layout_height="35dp"
                android:layout_alignStart="@+id/namesub"
                android:layout_alignLeft="@+id/namesub"
                android:layout_alignTop="@+id/namesub"
                android:layout_alignEnd="@+id/namesub"
                android:layout_alignRight="@+id/namesub"
                android:layout_marginStart="-2dp"
                android:layout_marginLeft="-2dp"
                android:layout_marginTop="43dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:text="Keyword Checkname" />

            <Button
                android:id="@+id/random"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/showkey"
                android:layout_alignStart="@+id/showkey"
                android:layout_alignLeft="@+id/showkey"
                android:layout_alignEnd="@+id/showkey"
                android:layout_alignRight="@+id/showkey"
                android:layout_marginStart="94dp"
                android:layout_marginLeft="94dp"
                android:layout_marginTop="62dp"
                android:layout_marginEnd="87dp"
                android:layout_marginRight="87dp"
                android:text="Random Keyword" />
            <Button
                android:id="@+id/genqr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/showkey"
                android:layout_alignStart="@+id/showkey"
                android:layout_alignLeft="@+id/showkey"
                android:layout_alignEnd="@+id/showkey"
                android:layout_alignRight="@+id/showkey"
                android:layout_marginStart="94dp"
                android:layout_marginLeft="94dp"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="87dp"
                android:layout_marginRight="87dp"
                android:text="Random Keyword" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>