<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="#E29B9B"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagetPost"
        android:layout_width="62dp"
        android:layout_height="59dp"
        android:paddingLeft="10dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/nameteacherpost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ชื่อครู"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/DataOfPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ราคาอาหาร"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/maseeageNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textnewss"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="30dp"
                android:paddingRight="18dp"
                android:text="ข้อความ"
                android:textStyle="bold" />
        </RelativeLayout>


    </LinearLayout>
    <RelativeLayout
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>